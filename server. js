const express = require("express");
const bodyParser = require("body-parser");
const app = express();

app.use(bodyParser.json());
app.use(express.static("public"));

const links = {};

app.post("/create", (req, res) => {
  const id = Math.random().toString(36).substring(2, 8);
  links[id] = { target: req.body.url, locations: [] };
  res.json({ link: `/go/${id}` });
});

app.post("/location/:id", (req, res) => {
  if (!links[req.params.id]) return res.sendStatus(404);
  links[req.params.id].locations.push({
    ...req.body,
    time: new Date()
  });
  res.send("OK");
});

app.get("/go/:id", (req, res) => {
  res.sendFile(__dirname + "/public/track.html");
});

app.get("/data/:id", (req, res) => {
  res.json(links[req.params.id]);
});

app.listen(3000, "0.0.0.0", () =>
  console.log("Server chạy cổng 3000")
);
